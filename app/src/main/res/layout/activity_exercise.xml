<?xml version="1.0" encoding="utf-8"?>
<!-- UnusedResources reason: colors are referred to as unused-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedResources"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.Guideline
        android:id="@+id/start"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="70dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/end"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="70dp"/>

    <TextView
        android:id="@+id/exercise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/titleText"
        android:text="Biceps Curl"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/subtitleText"
        android:text="4 sets of 10 reps"
        app:layout_constraintTop_toBottomOf="@+id/exercise_title"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <TextView
        android:id="@+id/time_remaining_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/subtitleText"
        android:text="00:19"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_countdown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/countdown_view_shape"
        app:layout_constraintBottom_toTopOf="@id/time_remaining_text"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintEnd_toStartOf="@id/end"
        app:layout_constraintStart_toEndOf="@id/start"/>

</android.support.constraint.ConstraintLayout>