<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Design does not have a colour Primary and secondary in accordance to googles material guidelines
        adapt both to be the window background for this activity -->
        <item name="colorPrimary">@color/windowBackgroundExercise</item>
        <item name="colorPrimaryDark">@color/windowBackgroundExercise</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
